<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg8"
    android:scaleType="fitXY"
    android:textAlignment="textEnd"
    tools:context=".MainActivity">


        <TextView
            android:id="@+id/textTemp"
            android:layout_width="132dp"
            android:layout_height="103dp"
            android:layout_marginTop="40dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="70sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.082"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editcityname" />

        <TextView
            android:id="@+id/city1"
            android:layout_width="132dp"
            android:layout_height="28dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/textTemp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textTemp"
            app:layout_constraintTop_toBottomOf="@+id/textTemp" />

        <TextView
            android:id="@+id/tempMinBox"
            android:layout_width="183dp"
            android:layout_height="50dp"
            android:layout_marginTop="52dp"
            android:text="Minimum Temperature : "
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.152"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/city1" />

        <TextView
            android:id="@+id/tempMinBox2"
            android:layout_width="205dp"
            android:layout_height="30dp"
            android:layout_marginTop="124dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.936"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tempMinBox3"
            android:layout_width="115dp"
            android:layout_height="35dp"
            android:layout_marginTop="176dp"
            android:text="Real Feels : "
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.652"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textTempMin"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginTop="52dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/tempMinBox"
            app:layout_constraintTop_toBottomOf="@+id/city1"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textTempMin2"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="176dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/tempMinBox3"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tempMaxBox"
            android:layout_width="187dp"
            android:layout_height="50dp"
            android:layout_marginBottom="212dp"
            android:text="Maximum Temperature :"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tempMinBox"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tempMinBox" />

        <TextView
            android:id="@+id/textTempMax"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginBottom="212dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textTempMin"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/tempMinBox" />

        <EditText
            android:id="@+id/editcityname"
            android:layout_width="326dp"
            android:layout_height="44dp"
            android:alpha="0.5"
            android:background="@drawable/rounded_corner"
            android:hint="Enter City"
            android:inputType="text"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="#A9A9A9"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.197"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.024" />

        <ImageView
            android:id="@+id/search"
            android:layout_width="42dp"
            android:layout_height="44dp"
            android:alpha="0.5"
            android:background="@drawable/rounded_corner"
            app:layout_constraintBottom_toBottomOf="@+id/editcityname"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/editcityname"
            app:layout_constraintTop_toTopOf="@+id/editcityname"
            app:srcCompat="@drawable/search" />

</androidx.constraintlayout.widget.ConstraintLayout>

